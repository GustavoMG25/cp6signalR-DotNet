@page
<div class="container mt-5">
    <h2 class="text-center mb-4">Chat Application</h2>

    <div class="mb-3">
        <label for="userInput" class="form-label">User </label>
        <input type="text" class="form-control" id="userInput" placeholder="Seu nome" />
    </div>

    <div class="mb-3">
        <label for="messageInput" class="form-label">Message</label>
        <input type="text" class="form-control" id="messageInput" placeholder="Mensagem" />
    </div>

    <div class="d-flex justify-content-end mb-4">
        <button class="btn btn-primary" id="sendButton">Send Message</button>
    </div>

    <hr />

    <div class="mb-3">
        <label for="groupInput" class="form-label">Group</label>
        <input type="text" class="form-control" id="groupInput" placeholder="Group Name" />
    </div>

    <div class="d-flex justify-content-end mb-4">
        <button class="btn btn-success me-2" id="joinGroupButton">Join Group</button>
        <button class="btn btn-info" id="sendGroupButton">Send to Group</button>
    </div>

    <hr />

    <h4>Messages</h4>
    <ul class="list-group" id="messagesList"></ul>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>